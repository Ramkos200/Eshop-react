{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "devv": "npm run dev --prefix frontend",
        "build": "npm run build --prefix frontend",
        "dev": "concurrently \"npm run frontend-dev\" \"php artisan serve\"",
        "frontend-dev": "cd frontend && npm run dev",
        "laravel-dev": "php artisan serve",
        "buildvite": "vite build",
        "dev:proxy": "vite --config vite.config.proxy.js"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/vite": "^4.0.0",
        "alpinejs": "^3.4.2",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "vite": "^7.0.4"
    }
}
